---
title: Preaching
layout: layouts/base.njk
---

<section class="mt-12 px-4">
  <div class="mx-auto lg:container mb-4">
    <div class="px-4 pt-4">
      <h2 class="glbHeading">Latest sermon</h2>

      {% set latestSermon = preaching| first %}

      <a href="/resources/{{ latestSermon.slug }}">
        {{ latestSermon.title }}
      </a>
    </div>
  </div>
</section>

<section class="mt-12 px-4">
  <div class="mx-auto lg:container mb-4">
    <div class="px-4 pt-4">
      <h2 class="glbHeading">List of Sermon series</h2>
      <div class="grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
        {% for series in sermonseries %}
        <a href="/preaching/{{ series.slug }}" class="block">
          {{ series.title }}
        </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
