<main class="mt-12 px-4">

  <div class="mx-auto lg:container mb-4">
    {% set eventList = events | eventThisWeek | eventsSort %}
    <h2 class="glbHeading px-4">Events this week</h2>
    {% include 'blocks/eventList.njk' %}
  </div>

  <!-- TODO FEATURED EVENT BLOCK -->
  <div class="mx-auto lg:container mb-4">
    {% set eventList = events | eventsFuture(7, 'day') | eventsSort %}
    <h2 class="glbHeading px-4">Future events</h2>
    {% include 'blocks/eventList.njk' %}
  </div>
</main>
