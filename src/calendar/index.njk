---
title: Calendar
layout: layouts/base.njk
---

<div class="grid grid-flow-row gap-4">
  <!-- ICON'S
    {% svgIcon "pin", "h-16 w-16 text-orange" %}
    {% svgIcon "clock", "h-16 w-16 text-green" %}
  -->  

  <h2>Events this week</h2>
  {% for event in events | eventThisWeek | eventsSort %}
  <!-- BORDER & COLOUR -->  
    <a
      href="/calendar/{{ event.startDate | formatDate}}/{{ event.slug }}/"
      class="block border p-4 hover:border-blue"
      itemscope itemtype="https://schema.org/Event"
    >

  <!-- NAME OF EVENT --> 
      <p itemprop="name">
        {{ event.title }}
      </p>

  <!-- DATE & TIME --> 
      <date class="block text-xs" itemprop="startDate" content="{{ event.startDate }}">
        {% svgIcon "clock", "h-3 w-3 text-green" %}
        {{ event.startDate | formatDate('dddd, D MMMM YYYY, h:mma') }} ({{ event.duration }})
      </date>
   
  <!-- LOCATION -->     
      <p itemprop="location" itemscope itemtype="https://schema.org/Place">
          {% svgIcon "pin", "h-3 w-3 text-orange" %}
          {{ event.location}}
      </p>

    </a>
  {% endfor %}

  <!-- HORIZONTAL BREAKPOINT -->  
  <hr>

  <h2>Future events</h2>
  {% for event in events | eventsFuture(7, 'day') | eventsSort %}
    <a href="/calendar/{{ event.startDate | formatDate}}/{{ event.slug }}/" class="block border p-4 no-underline hover:border-blue">
      {% if event.data.tags %}
      <div>
        {% for tag in event.data.tags %}
          <span class="rounded bg-orange px-1 mr-1 text-xs text-white inline-block">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
      {{ event.title }}<br />
      {{ event.startDate | formatDate('dddd, D MMMM YYYY') }}<br />
      {{ event.startDate | formatDate('h:mma') }} â€“ {{ event.endDate | formatDate('h:mma') }} ({{ event.duration }})

      <p>{{ event.location }}</p>
    </a>
  {% endfor %}
</div>
